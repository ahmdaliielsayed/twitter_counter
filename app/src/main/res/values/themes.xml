<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HalanTwitterCounter" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HalanTwitterCounter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HalanTwitterCounter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomButtonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/dimen_0</item>
        <item name="android:translationZ">@dimen/dimen_0</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_dimen_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenButton" parent="CustomButtonStyle">
        <item name="android:background">@drawable/btn_green_background</item>
    </style>

    <style name="RedButton" parent="CustomButtonStyle">
        <item name="android:background">@drawable/btn_red_background</item>
    </style>

    <style name="CeruleanButton" parent="CustomButtonStyle">
        <item name="android:background">@drawable/btn_post_tweet_selector</item>
    </style>

    <style name="CardCharactersTitle">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:background">@drawable/card_title_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardCharactersBody">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">@dimen/dimen_0</item>
        <item name="android:background">@drawable/card_body_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_dimen_24</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>